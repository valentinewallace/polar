    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-async-hook": "3.6.2",
    "react-copy-to-clipboard": "5.0.3",
    "react-dom": "17.0.1",
    "react-hot-loader": "4.13.0",
    "react-i18next": "11.8.5",
